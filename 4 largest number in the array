#include <stdio.h>
int main() {
   int i,largest,n,arr[100];
   printf("enter the array size:");
   scanf("%d",&n);
printf("enter the array elements:");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
   largest = arr[0];
   
   for(i = 1; i <n; i++) {
      if( largest < arr[i] ) 
         largest = arr[i];
   }
   printf("Largest element of array is %d", largest);   
   return 0;
}
